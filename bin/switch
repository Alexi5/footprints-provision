#!/usr/bin/env bash

set -euo pipefail

# shellcheck disable=SC1091
source ./lib/functions.sh;

function switch()
{
    cd terraform

    TF_VAR_production_ec2_id=$(terraform output staging_elb_target_group_attachment) \
        TF_VAR_staging_ec2_id=$(terraform output production_elb_target_group_attachment) \
        terraform apply
}

switch
